#!/usr/local/bin/zsh --norcs
# search Jeffs sift notes locations with the silver searcher

function sift_home() {
    declare -a dirs_to_search=("$HOME/sift" "$HOME/pdata/employers/sift")
    for d in ${dirs_to_search[@]}; do
        if [[ -d "$d" ]] && [[ -e "$d" ]]; then
            printf "$d"
            return
        fi
    done
    printf "unknown"
}

readonly -a source_dirs=(
    "$(sift_home)/notes"
    "$(sift_home)/todo"
    "$(sift_home)/pdata/notes"
    "$(sift_home)/pdata/todo"
)

declare -a ag_dirs=()
for d in ${source_dirs[@]}; do
    if [ -d "$d" ]; then
        ag_dirs+=("$d")
    fi
done

if (( ${#ag_dirs[@]} <= 0 )); then
   echo "no directories to search"
   exit 1
fi

ag "$@" ${ag_dirs[@]}
