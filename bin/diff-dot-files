#!/usr/bin/env bash

proj_dir="${HOME}/proj/jwm-dotfiles"

for file in \
 .ackrc \
 .aliases \
 .bash_profile \
 .bash_prompt \
 .bashrc \
 .curlrc \
 .editorconfig \
 .exports \
 .functions \
 .gdbinit \
 .gitattributes \
 .gitconfig \
 .gitignore \
 .gvimrc \
 .hgignore \
 .inputrc \
 .iterm2_shell_integration.bash \
 .macos \
 .path \
 .screenrc \
 .tmux.conf \
 .vimrc \
 .wgetrc \
 bin/commify \
 bin/diff-dot-files \
 bin/localtime \
 bin/nag \
 bin/prefer-classic-emacs-config \
 bin/prefer-literate-emacs-config \
 bin/sag \
 bin/sample \
 lib/git-sync.sh \
 ; do
    # -q is a bit too quiet...
    git diff "${HOME}/${file}" "${proj_dir}/${file}"
done;
