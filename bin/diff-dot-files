#!/usr/bin/env bash

# my "home" for this purpose varies from work laptop to home laptop
jwm_home_dir() {
    if [[ -e ${HOME}/jwm/notes && -d ${HOME}/jwm/notes ]]; then
        printf "${HOME}/jwm"
    else
        printf "${HOME}"
    fi
}

proj_dir="$(jwm_home_dir)/proj/jwm-dotfiles"

for file in \
 .ackrc \
 .aliases \
 .bash_profile \
 .bash_prompt \
 .bashrc \
 .curlrc \
 .editorconfig \
 .exports \
 .functions \
 .gdbinit \
 .gitattributes \
 .gitconfig \
 .gitignore \
 .gvimrc \
 .hgignore \
 .inputrc \
 .iterm2_shell_integration.bash \
 .macos \
 .path \
 .screenrc \
 .tmux.conf \
 .vimrc \
 .wgetrc \
 bin/diff-dot-files \
 bin/nag \
 bin/prefer-classic-emacs-config \
 bin/prefer-literate-emacs-config \
 bin/sag \
 lib/git-sync.sh \
 ; do
    # -q is a bit too quiet...
    git diff "${HOME}/${file}" "${proj_dir}/${file}"
done;
